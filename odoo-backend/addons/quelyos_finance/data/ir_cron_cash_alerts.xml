<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job: Vérification alertes de trésorerie -->
        <record id="ir_cron_check_cash_alerts" model="ir.cron">
            <field name="name">Quelyos Finance: Vérifier alertes de trésorerie</field>
            <field name="model_id" ref="model_quelyos_cash_alert"/>
            <field name="state">code</field>
            <field name="code">model.check_and_trigger()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>
    </data>
</odoo>
