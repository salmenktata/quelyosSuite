<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Tree Inventory -->
    <record id="view_quelyos_stock_inventory_tree" model="ir.ui.view">
        <field name="name">quelyos.stock.inventory.tree</field>
        <field name="model">quelyos.stock.inventory</field>
        <field name="arch" type="xml">
            <list string="Inventaires de Stock">
                <field name="name"/>
                <field name="date"/>
                <field name="location_id"/>
                <field name="user_id"/>
                <field name="line_count"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'in_progress'" decoration-success="state == 'done'" decoration-muted="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Vue Form Inventory -->
    <record id="view_quelyos_stock_inventory_form" model="ir.ui.view">
        <field name="name">quelyos.stock.inventory.form</field>
        <field name="model">quelyos.stock.inventory</field>
        <field name="arch" type="xml">
            <form string="Inventaire de Stock">
                <header>
                    <button name="action_start" string="Démarrer" type="object" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_validate" string="Valider" type="object" invisible="state != 'in_progress'" class="oe_highlight"/>
                    <button name="action_cancel" string="Annuler" type="object" invisible="state in ['done', 'cancelled']"/>
                    <button name="action_reset_draft" string="Remettre en brouillon" type="object" invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="location_id" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="user_id" readonly="state != 'draft'"/>
                            <field name="line_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lignes d'inventaire" invisible="state == 'draft'">
                            <field name="line_ids" readonly="state not in ['in_progress']">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="theoretical_qty"/>
                                    <field name="counted_qty"/>
                                    <field name="difference_qty" decoration-danger="difference_qty &lt; 0" decoration-success="difference_qty &gt; 0"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="note" readonly="state not in ['draft', 'in_progress']"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Search Inventory -->
    <record id="view_quelyos_stock_inventory_search" model="ir.ui.view">
        <field name="name">quelyos.stock.inventory.search</field>
        <field name="model">quelyos.stock.inventory</field>
        <field name="arch" type="xml">
            <search string="Rechercher Inventaires">
                <field name="name"/>
                <field name="location_id"/>
                <field name="user_id"/>
                <filter name="draft" string="Brouillon" domain="[('state', '=', 'draft')]"/>
                <filter name="in_progress" string="En cours" domain="[('state', '=', 'in_progress')]"/>
                <filter name="done" string="Terminé" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter name="group_location" string="Emplacement" context="{'group_by': 'location_id'}"/>
                <filter name="group_user" string="Responsable" context="{'group_by': 'user_id'}"/>
                <filter name="group_state" string="Statut" context="{'group_by': 'state'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_quelyos_stock_inventory" model="ir.actions.act_window">
        <field name="name">Inventaires</field>
        <field name="res_model">quelyos.stock.inventory</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_in_progress': 1}</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_quelyos_stock_inventory"
              name="Inventaires"
              parent="stock.menu_stock_warehouse_mgmt"
              action="action_quelyos_stock_inventory"
              sequence="20"/>
</odoo>
