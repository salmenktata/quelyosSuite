<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Tree -->
    <record id="view_quelyos_stock_location_lock_tree" model="ir.ui.view">
        <field name="name">quelyos.stock.location.lock.tree</field>
        <field name="model">quelyos.stock.location.lock</field>
        <field name="arch" type="xml">
            <list string="Verrouillages d'Emplacements">
                <field name="name"/>
                <field name="location_id"/>
                <field name="reason"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="user_id"/>
                <field name="is_locked" widget="boolean" decoration-danger="is_locked == True" decoration-success="is_locked == False"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Vue Form -->
    <record id="view_quelyos_stock_location_lock_form" model="ir.ui.view">
        <field name="name">quelyos.stock.location.lock.form</field>
        <field name="model">quelyos.stock.location.lock</field>
        <field name="arch" type="xml">
            <form string="Verrouillage d'Emplacement">
                <header>
                    <button name="action_lock" string="Verrouiller" type="object" invisible="active == True" class="oe_highlight"/>
                    <button name="action_unlock" string="Déverrouiller" type="object" invisible="active == False" class="oe_highlight"/>
                    <field name="is_locked" widget="badge" decoration-danger="is_locked == True" decoration-success="is_locked == False"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="location_id"/>
                            <field name="user_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                    <group>
                        <field name="reason" widget="text"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="view_quelyos_stock_location_lock_search" model="ir.ui.view">
        <field name="name">quelyos.stock.location.lock.search</field>
        <field name="model">quelyos.stock.location.lock</field>
        <field name="arch" type="xml">
            <search string="Rechercher Verrouillages">
                <field name="location_id"/>
                <field name="reason"/>
                <field name="user_id"/>
                <filter name="active" string="Actif" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archivé" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="group_location" string="Emplacement" context="{'group_by': 'location_id'}"/>
                <filter name="group_user" string="Utilisateur" context="{'group_by': 'user_id'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_quelyos_stock_location_lock" model="ir.actions.act_window">
        <field name="name">Verrouillages d'Emplacements</field>
        <field name="res_model">quelyos.stock.location.lock</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_quelyos_stock_location_lock"
              name="Verrouillages d'Emplacements"
              parent="stock.menu_stock_warehouse_mgmt"
              action="action_quelyos_stock_location_lock"
              sequence="30"/>
</odoo>
