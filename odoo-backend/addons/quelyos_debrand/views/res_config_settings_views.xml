<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form_quelyos" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.quelyos.debrand</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Quelyos" string="Quelyos" name="quelyos_debrand" groups="base.group_system" logo="/quelyos_debrand/static/img/quelyos_icon.svg">
                    <block title="Personnalisation Quelyos" name="quelyos_branding">
                        <setting id="quelyos_system_name_setting" title="Nom affiché dans l'interface">
                            <field name="quelyos_system_name"/>
                            <div class="text-muted">
                                Nom du système affiché dans le titre des pages
                            </div>
                        </setting>
                        <setting id="quelyos_company_url_setting" title="URL du site Quelyos">
                            <field name="quelyos_company_url"/>
                        </setting>
                        <setting id="quelyos_support_url_setting" title="URL du support">
                            <field name="quelyos_support_url"/>
                        </setting>
                        <setting id="quelyos_documentation_url_setting" title="URL de la documentation">
                            <field name="quelyos_documentation_url"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

</odoo>
