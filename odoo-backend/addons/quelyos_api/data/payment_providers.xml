<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Flouci Payment Provider -->
        <record id="payment_provider_flouci" model="payment.provider">
            <field name="name">Flouci</field>
            <field name="code">flouci</field>
            <field name="state">disabled</field>
            <field name="sequence">10</field>
            <field name="x_flouci_timeout">60</field>
            <field name="x_flouci_accept_cards" eval="True"/>
        </record>

        <!-- Konnect Payment Provider -->
        <record id="payment_provider_konnect" model="payment.provider">
            <field name="name">Konnect</field>
            <field name="code">konnect</field>
            <field name="state">disabled</field>
            <field name="sequence">20</field>
            <field name="x_konnect_lifespan">10</field>
            <field name="x_konnect_theme">light</field>
        </record>
    </data>
</odoo>
