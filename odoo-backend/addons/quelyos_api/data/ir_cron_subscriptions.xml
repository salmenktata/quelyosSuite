<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron: Check Trial Expiry (quotidien à 9h) -->
        <record id="ir_cron_trial_expiry" model="ir.cron">
            <field name="name">Quelyos: Check Trial Expiry</field>
            <field name="model_id" eval="ref('quelyos_api.model_quelyos_subscription')"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_trial_expiry()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron: Send Trial Ending Reminders (quotidien à 9h) -->
        <record id="ir_cron_trial_ending_reminders" model="ir.cron">
            <field name="name">Quelyos: Send Trial Ending Reminders</field>
            <field name="model_id" eval="ref('quelyos_api.model_quelyos_subscription')"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_trial_ending_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron: Check Quota Warnings (quotidien à 9h) -->
        <record id="ir_cron_quota_warnings" model="ir.cron">
            <field name="name">Quelyos: Check Quota Warnings</field>
            <field name="model_id" eval="ref('quelyos_api.model_quelyos_subscription')"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_quota_warnings()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron: Process Dunning Steps (quotidien à 9h) -->
        <record id="ir_cron_process_dunning" model="ir.cron">
            <field name="name">Quelyos: Process Dunning Steps</field>
            <field name="model_id" eval="ref('quelyos_api.model_quelyos_subscription')"/>
            <field name="state">code</field>
            <field name="code">model._cron_process_dunning()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
