<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Étapes de workflow pour les demandes de maintenance -->
        <!-- Logique inspirée IBM Maximo MVP -->

        <record id="maintenance_stage_new" model="quelyos.maintenance.stage">
            <field name="name">Nouvelle</field>
            <field name="sequence">10</field>
            <field name="done" eval="False"/>
            <field name="fold" eval="False"/>
        </record>

        <record id="maintenance_stage_in_progress" model="quelyos.maintenance.stage">
            <field name="name">En Cours</field>
            <field name="sequence">20</field>
            <field name="done" eval="False"/>
            <field name="fold" eval="False"/>
        </record>

        <record id="maintenance_stage_done" model="quelyos.maintenance.stage">
            <field name="name">Terminé</field>
            <field name="sequence">30</field>
            <field name="done" eval="True"/>
            <field name="fold" eval="True"/>
        </record>

        <record id="maintenance_stage_cancelled" model="quelyos.maintenance.stage">
            <field name="name">Annulé</field>
            <field name="sequence">40</field>
            <field name="done" eval="True"/>
            <field name="fold" eval="True"/>
        </record>
    </data>
</odoo>
