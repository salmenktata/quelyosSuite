<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Politiques SLA par défaut -->

        <!-- SLA Urgent : Réponse 2h, Résolution 8h -->
        <record id="sla_policy_urgent" model="quelyos.sla.policy">
            <field name="name">SLA Urgent</field>
            <field name="priority_level">urgent</field>
            <field name="category">all</field>
            <field name="target_first_response">2.0</field>
            <field name="target_resolution">8.0</field>
            <field name="warning_threshold">75</field>
            <field name="sequence">10</field>
            <field name="active" eval="True"/>
        </record>

        <!-- SLA Haute : Réponse 4h, Résolution 24h -->
        <record id="sla_policy_high" model="quelyos.sla.policy">
            <field name="name">SLA Haute priorité</field>
            <field name="priority_level">high</field>
            <field name="category">all</field>
            <field name="target_first_response">4.0</field>
            <field name="target_resolution">24.0</field>
            <field name="warning_threshold">80</field>
            <field name="sequence">20</field>
            <field name="active" eval="True"/>
        </record>

        <!-- SLA Moyenne : Réponse 8h, Résolution 48h -->
        <record id="sla_policy_medium" model="quelyos.sla.policy">
            <field name="name">SLA Priorité moyenne</field>
            <field name="priority_level">medium</field>
            <field name="category">all</field>
            <field name="target_first_response">8.0</field>
            <field name="target_resolution">48.0</field>
            <field name="warning_threshold">80</field>
            <field name="sequence">30</field>
            <field name="active" eval="True"/>
        </record>

        <!-- SLA Basse : Réponse 24h, Résolution 72h -->
        <record id="sla_policy_low" model="quelyos.sla.policy">
            <field name="name">SLA Basse priorité</field>
            <field name="priority_level">low</field>
            <field name="category">all</field>
            <field name="target_first_response">24.0</field>
            <field name="target_resolution">72.0</field>
            <field name="warning_threshold">85</field>
            <field name="sequence">40</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
