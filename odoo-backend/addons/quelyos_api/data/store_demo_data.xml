            <field name="discount_percent">15</field>
            <field name="free_shipping">True</field>
            <field name="early_access">True</field>
            <field name="priority_support">True</field>
            <field name="color">#E5E4E2</field>
            <field name="icon">Diamond</field>
        </record>

