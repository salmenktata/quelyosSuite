            <field name="icon">Crown</field>
        </record>

        <record id="loyalty_level_platinum" model="quelyos.loyalty.level">
            <field name="name">Platine</field>
            <field name="program_id" ref="loyalty_program_default"/>
            <field name="min_points">15000</field>
