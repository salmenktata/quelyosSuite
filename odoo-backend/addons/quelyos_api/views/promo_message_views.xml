<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_promo_message_tree" model="ir.ui.view">
        <field name="name">quelyos.promo.message.tree</field>
        <field name="model">quelyos.promo.message</field>
        <field name="arch" type="xml">
            <list string="Messages PromoBar">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="text"/>
                <field name="icon"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_promo_message_form" model="ir.ui.view">
        <field name="name">quelyos.promo.message.form</field>
        <field name="model">quelyos.promo.message</field>
        <field name="arch" type="xml">
            <form string="Message PromoBar">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group string="Contenu">
                        <field name="text"/>
                        <field name="icon"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_promo_message" model="ir.actions.act_window">
        <field name="name">Messages PromoBar</field>
        <field name="res_model">quelyos.promo.message</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu désactivé (géré via Backoffice)
    <menuitem id="menu_promo_message"
              name="Messages PromoBar"
              parent="menu_quelyos_cms"
              action="action_promo_message"
              sequence="30"/>
    -->
</odoo>
