<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ═══════════════════════════════════════════════════════════════════════════
         VUE TREE - Liste des thèmes
    ═══════════════════════════════════════════════════════════════════════════ -->

    <record id="view_quelyos_theme_tree" model="ir.ui.view">
        <field name="name">quelyos.theme.tree</field>
        <field name="model">quelyos.theme</field>
        <field name="arch" type="xml">
            <list string="Thèmes">
                <field name="sequence" widget="handle"/>
                <field name="thumbnail" widget="image" class="oe_avatar"/>
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="version"/>
                <field name="is_public" widget="boolean_toggle"/>
                <field name="is_premium" widget="boolean_toggle"/>
                <field name="price"/>
                <field name="rating" widget="priority"/>
                <field name="downloads"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- ═══════════════════════════════════════════════════════════════════════════
         VUE KANBAN - Galerie des thèmes
    ═══════════════════════════════════════════════════════════════════════════ -->

    <record id="view_quelyos_theme_kanban" model="ir.ui.view">
        <field name="name">quelyos.theme.kanban</field>
        <field name="model">quelyos.theme</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="thumbnail"/>
                <field name="is_premium"/>
                <field name="price"/>
                <field name="rating"/>
                <field name="downloads"/>
                <field name="preview_url"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('quelyos.theme', 'thumbnail', record.id.raw_value)" alt="Thumbnail"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="code"/> · <field name="category"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span t-if="record.is_premium.raw_value" class="badge badge-warning">Premium</span>
                                    <span t-if="record.price.raw_value > 0"><field name="price"/> TND</span>
                                    <span t-else="">Gratuit</span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="rating" widget="priority"/>
                                        (<field name="downloads"/> téléchargements)
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <button t-if="record.preview_url.raw_value" name="action_preview" type="object" class="btn btn-sm btn-link">
                                            <i class="fa fa-eye"/> Preview
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ═══════════════════════════════════════════════════════════════════════════
         VUE FORM - Formulaire de création/édition
    ═══════════════════════════════════════════════════════════════════════════ -->

    <record id="view_quelyos_theme_form" model="ir.ui.view">
        <field name="name">quelyos.theme.form</field>
        <field name="model">quelyos.theme</field>
        <field name="arch" type="xml">
            <form string="Thème">
                <header>
                    <button name="action_preview" string="Prévisualiser" type="object" class="btn-primary" invisible="not preview_url"/>
                    <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-download">
                            <field name="downloads" widget="statinfo" string="Téléchargements"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Premium" bg_color="bg-warning" invisible="not is_premium"/>

                    <field name="thumbnail" widget="image" class="oe_avatar" options="{'preview_image': 'thumbnail'}"/>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Nom du thème"/></h1>
                        <label for="code" class="oe_edit_only"/>
                        <h2><field name="code" placeholder="code-unique-kebab-case"/></h2>
                    </div>

                    <group>
                        <group string="Informations Générales">
                            <field name="category"/>
                            <field name="description"/>
                            <field name="version"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Visibilité &amp; Monétisation">
                            <field name="is_public"/>
                            <field name="tenant_ids" widget="many2many_tags" invisible="is_public"/>
                            <field name="is_premium"/>
                            <field name="price" invisible="not is_premium"/>
                            <field name="rating" widget="priority"/>
                        </group>
                    </group>

                    <group string="Médias">
                        <field name="preview_url" widget="url"/>
                        <field name="screenshot_ids" widget="one2many">
                            <list editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="image" widget="image"/>
                            </list>
                        </field>
                    </group>

                    <notebook>
                        <page string="Configuration JSON" name="config">
                            <field name="config_json" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Avis" name="reviews">
                            <field name="review_ids" readonly="1">
                                <list>
                                    <field name="create_date"/>
                                    <field name="user_id"/>
                                    <field name="tenant_id"/>
                                    <field name="rating" widget="priority"/>
                                    <field name="title"/>
                                    <field name="comment"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

