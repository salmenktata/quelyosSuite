    <!-- ═══════════════════════════════════════════════════════════════════════════
         ACTIONS - Menu et actions
    ═══════════════════════════════════════════════════════════════════════════ -->

    <record id="action_quelyos_theme" model="ir.actions.act_window">
        <field name="name">Thèmes</field>
        <field name="res_model">quelyos.theme</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre premier thème
            </p>
            <p>
                Les thèmes permettent de personnaliser complètement l'apparence de la boutique e-commerce.
                Créez des configurations JSON pour définir layouts, sections, couleurs et typographie.
            </p>
        </field>
    </record>

    <record id="action_quelyos_theme_review" model="ir.actions.act_window">
        <field name="name">Avis Thèmes</field>
        <field name="res_model">quelyos.theme.review</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ═══════════════════════════════════════════════════════════════════════════
         MENU - Ajouter dans le menu principal
    ═══════════════════════════════════════════════════════════════════════════ -->

    <menuitem id="menu_quelyos_themes"
              name="Theme Engine"
              parent="quelyos_api.menu_quelyos_root"
              sequence="25"/>

    <menuitem id="menu_quelyos_theme_list"
              name="Thèmes"
              parent="menu_quelyos_themes"
              action="action_quelyos_theme"
              sequence="10"/>

    <menuitem id="menu_quelyos_theme_reviews"
              name="Avis"
              parent="menu_quelyos_themes"
              action="action_quelyos_theme_review"
              sequence="20"/>

