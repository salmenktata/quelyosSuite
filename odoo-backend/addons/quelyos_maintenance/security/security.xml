<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- ========================================== -->
        <!-- Groupes Maintenance (GMAO) -->
        <!-- ========================================== -->

        <record id="group_quelyos_maintenance_user" model="res.groups">
            <field name="name">Quelyos Maintenance User</field>
            <field name="sequence">70</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Accès lecture/écriture à la GMAO (équipements et demandes d'intervention)</field>
        </record>

        <record id="group_quelyos_maintenance_manager" model="res.groups">
            <field name="name">Quelyos Maintenance Manager</field>
            <field name="sequence">71</field>
            <field name="implied_ids" eval="[(4, ref('group_quelyos_maintenance_user'))]"/>
            <field name="comment">Tous droits sur la GMAO (gestion complète maintenance)</field>
        </record>

        <record id="group_quelyos_maintenance_technician" model="res.groups">
            <field name="name">Quelyos Maintenance Technician</field>
            <field name="sequence">72</field>
            <field name="implied_ids" eval="[(4, ref('group_quelyos_maintenance_user'))]"/>
            <field name="comment">Technicien maintenance (traitement interventions uniquement)</field>
        </record>

    </data>
</odoo>
