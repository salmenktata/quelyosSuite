{
  "name": "quelyos-suite",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.3",
      "@types/react-dom": "^18.3.0"
    }
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "api",
    "dashboard-client",
    "vitrine-quelyos",
    "vitrine-client",
    "super-admin-client"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "echo 'Use pnpm dev:<app> or pnpm dev:all'",
    "dev:all": "turbo run dev --parallel",
    "dev:api": "turbo run dev --filter=@quelyos/api",
    "dev:dashboard": "turbo run dev --filter=quelyos-backoffice",
    "dev:vitrine-quelyos": "turbo run dev --filter=@quelyos/website",
    "dev:vitrine-client": "turbo run dev --filter=frontend",
    "dev:finance": "turbo run dev --filter=finance-os",
    "dev:store": "turbo run dev --filter=store-os",
    "dev:copilote": "turbo run dev --filter=copilote-ops",
    "dev:sales": "turbo run dev --filter=sales-os",
    "dev:retail": "turbo run dev --filter=retail-os",
    "dev:team": "turbo run dev --filter=team-os",
    "dev:support": "turbo run dev --filter=support-os",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "pnpm -r exec rm -rf node_modules dist .next .turbo",
    "prepare": "husky",
    "generate-sitemap": "tsx scripts/generate-sitemap.ts",
    "generate-sitemap:dry": "tsx scripts/generate-sitemap.ts --dry-run",
    "validate-sitemap": "tsx scripts/validate-sitemap.ts",
    "validate-sitemap:fix": "tsx scripts/validate-sitemap.ts --fix"
  },
  "devDependencies": {
    "globby": "^14.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.19.2",
    "turbo": "^2.8.1"
  },
  "lint-staged": {
    "dashboard-client/**/*.{ts,tsx}": [
      "bash -c 'cd dashboard-client && pnpm type-check'",
      "bash -c 'cd dashboard-client && pnpm eslint --max-warnings 0'",
      "bash scripts/check-console-log.sh"
    ],
    "vitrine-client/**/*.{ts,tsx}": [
      "bash -c 'cd vitrine-client && pnpm tsc --noEmit'",
      "bash -c 'cd vitrine-client && pnpm eslint --max-warnings 300'",
      "bash scripts/check-console-log.sh"
    ],
    "vitrine-quelyos/**/*.{ts,tsx}": [
      "bash -c 'cd vitrine-quelyos && pnpm tsc --noEmit'",
      "bash -c 'cd vitrine-quelyos && pnpm eslint --max-warnings 0'",
      "bash scripts/check-console-log.sh"
    ],
    "odoo-backend/**/*.py": [
      "bash scripts/check-odoo-syntax.sh"
    ]
  }
}
