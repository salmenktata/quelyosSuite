<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_frontend_config_form" model="ir.ui.view">
        <field name="name">quelyos.frontend.config.form</field>
        <field name="model">quelyos.frontend.config</field>
        <field name="arch" type="xml">
            <form string="Configuration Frontend">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <!-- Tab 1: URLs et Connexion -->
                        <page string="URLs et Connexion" name="urls">
                            <group>
                                <group string="URLs">
                                    <field name="frontend_url" widget="url"/>
                                    <field name="backend_url" widget="url"/>
                                    <field name="api_proxy_path"/>
                                </group>
                            </group>
                        </page>

                        <!-- Tab 2: Webhooks -->
                        <page string="Webhooks" name="webhooks">
                            <group>
                                <group string="Configuration Webhooks">
                                    <field name="webhook_enabled"/>
                                    <field name="webhook_secret" password="True"/>
                                    <field name="webhook_endpoint"/>
                                </group>
                                <group string="Types de Webhooks">
                                    <field name="webhook_stock_change"/>
                                    <field name="webhook_order_confirmed"/>
                                    <field name="webhook_product_updated"/>
                                </group>
                            </group>
                        </page>

                        <!-- Tab 3: Fonctionnalités -->
                        <page string="Fonctionnalités" name="features">
                            <group>
                                <group string="Features Frontend">
                                    <field name="enable_wishlist"/>
                                    <field name="enable_comparison"/>
                                    <field name="enable_reviews"/>
                                    <field name="enable_guest_checkout"/>
                                </group>
                                <group string="Configuration API">
                                    <field name="products_per_page"/>
                                    <field name="api_timeout"/>
                                </group>
                            </group>
                        </page>

                        <!-- Tab 4: Branding -->
                        <page string="Branding" name="branding">
                            <group>
                                <group string="Logos">
                                    <field name="logo_url"/>
                                    <field name="favicon_url"/>
                                </group>
                                <group string="Couleurs">
                                    <field name="primary_color" widget="color"/>
                                    <field name="secondary_color" widget="color"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_frontend_config_tree" model="ir.ui.view">
        <field name="name">quelyos.frontend.config.tree</field>
        <field name="model">quelyos.frontend.config</field>
        <field name="arch" type="xml">
            <list string="Configuration Frontend">
                <field name="name"/>
                <field name="frontend_url"/>
                <field name="backend_url"/>
                <field name="webhook_enabled"/>
            </list>
        </field>
    </record>

    <record id="action_frontend_config" model="ir.actions.act_window">
        <field name="name">Configuration Frontend</field>
        <field name="res_model">quelyos.frontend.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configuration du frontend Next.js
            </p>
            <p>
                Configurez les URLs, webhooks, et fonctionnalités du frontend.
            </p>
        </field>
    </record>
</odoo>
