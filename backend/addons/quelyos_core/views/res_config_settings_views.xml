<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Menu Configuration Quelyos Core -->
    <record id="action_quelyos_core_config" model="ir.actions.act_window">
        <field name="name">Configuration Core</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'module': 'quelyos_core'}</field>
    </record>

    <menuitem id="menu_quelyos_root"
              name="Quelyos"
              sequence="1"/>

    <menuitem id="menu_quelyos_config"
              name="Configuration"
              parent="menu_quelyos_root"
              sequence="100"/>

    <menuitem id="menu_quelyos_core_config"
              name="Core"
              parent="menu_quelyos_config"
              action="action_quelyos_core_config"
              sequence="1"/>
</odoo>
