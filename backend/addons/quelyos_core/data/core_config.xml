<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Identité de l'organisation -->
        <record id="config_company_name" model="ir.config_parameter">
            <field name="key">quelyos.core.company_name</field>
            <field name="value">Quelyos</field>
        </record>

        <record id="config_company_url" model="ir.config_parameter">
            <field name="key">quelyos.core.company_url</field>
            <field name="value">https://quelyos.com</field>
        </record>

        <record id="config_support_url" model="ir.config_parameter">
            <field name="key">quelyos.core.support_url</field>
            <field name="value">https://support.quelyos.com</field>
        </record>

        <record id="config_docs_url" model="ir.config_parameter">
            <field name="key">quelyos.core.docs_url</field>
            <field name="value">https://docs.quelyos.com</field>
        </record>

        <record id="config_contact_email" model="ir.config_parameter">
            <field name="key">quelyos.core.contact_email</field>
            <field name="value">contact@quelyos.com</field>
        </record>

        <record id="config_copyright_year" model="ir.config_parameter">
            <field name="key">quelyos.core.copyright_year</field>
            <field name="value">2026</field>
        </record>

        <record id="config_copyright_text" model="ir.config_parameter">
            <field name="key">quelyos.core.copyright_text</field>
            <field name="value">© 2026 Quelyos - Tous droits réservés</field>
        </record>
    </data>
</odoo>
