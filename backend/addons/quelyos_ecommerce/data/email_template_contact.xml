<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Email Template: Contact Form Message -->
    <record id="email_template_contact_form" model="mail.template">
        <field name="name">E-commerce: Message Formulaire Contact</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="subject">Nouveau message de contact - {{ ctx.get('contact_subject', 'Sans sujet') }}</field>
        <field name="email_from">{{ ctx.get('sender_email', 'noreply@quelyos.com') }}</field>
        <field name="email_to">{{ ctx.get('recipients', '') }}</field>
        <field name="description">Email envoye lors de la soumission du formulaire de contact</field>
        <field name="body_html" type="html">
<![CDATA[
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body style="font-family: Arial, sans-serif; line-height: 1.6; color: #333; margin: 0; padding: 0; background-color: #f4f4f4;">
    <table width="100%" cellpadding="0" cellspacing="0" style="background-color: #f4f4f4; padding: 20px;">
        <tr>
            <td align="center">
                <table width="600" cellpadding="0" cellspacing="0" style="background: white; border-radius: 8px; overflow: hidden; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                    <!-- Header -->
                    <tr>
                        <td style="background: linear-gradient(135deg, #01613a 0%, #028a52 100%); color: white; padding: 30px; text-align: center;">
                            <h1 style="margin: 0; font-size: 24px;">Nouveau Message de Contact</h1>
                            <p style="margin: 10px 0 0 0; opacity: 0.9;">Formulaire de contact du site</p>
                        </td>
                    </tr>

                    <!-- Content -->
                    <tr>
                        <td style="padding: 30px;">
                            <p style="margin: 0 0 20px 0;">Vous avez recu un nouveau message via le formulaire de contact du site.</p>

                            <!-- Info Box -->
                            <table width="100%" cellpadding="15" cellspacing="0" style="background: #f8f9fa; border-radius: 8px; border-left: 4px solid #01613a; margin: 20px 0;">
                                <tr>
                                    <td>
                                        <p style="margin: 0 0 10px 0;"><strong style="color: #01613a;">Nom:</strong> {{ ctx.get('sender_name', 'Non specifie') }}</p>
                                        <p style="margin: 0 0 10px 0;"><strong style="color: #01613a;">Email:</strong> <a href="mailto:{{ ctx.get('sender_email', '') }}" style="color: #01613a;">{{ ctx.get('sender_email', 'Non specifie') }}</a></p>
                                        {% if ctx.get('sender_phone') %}
                                        <p style="margin: 0 0 10px 0;"><strong style="color: #01613a;">Telephone:</strong> {{ ctx.get('sender_phone') }}</p>
                                        {% endif %}
                                        <p style="margin: 0 0 10px 0;"><strong style="color: #01613a;">Sujet:</strong> {{ ctx.get('contact_subject', 'Non specifie') }}</p>
                                        <p style="margin: 0;"><strong style="color: #01613a;">Date:</strong> {{ ctx.get('contact_date', '') }}</p>
                                    </td>
                                </tr>
                            </table>

                            <!-- Message -->
                            <h3 style="margin: 20px 0 10px 0; color: #333;">Message:</h3>
                            <table width="100%" cellpadding="20" cellspacing="0" style="background: #fff; border: 1px solid #e0e0e0; border-radius: 8px;">
                                <tr>
                                    <td>
                                        <p style="margin: 0; white-space: pre-wrap; color: #333;">{{ ctx.get('message_body', '') }}</p>
                                    </td>
                                </tr>
                            </table>

                            <!-- CTA Button -->
                            <table width="100%" cellpadding="0" cellspacing="0" style="margin-top: 25px;">
                                <tr>
                                    <td align="center">
                                        <a href="mailto:{{ ctx.get('sender_email', '') }}?subject=Re: {{ ctx.get('contact_subject', '') }}"
                                           style="display: inline-block; padding: 12px 24px; background: #01613a; color: white; text-decoration: none; border-radius: 6px; font-weight: bold;">
                                            Repondre a ce message
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td style="background: #f8f9fa; padding: 20px; text-align: center; color: #666; font-size: 14px;">
                            <p style="margin: 0;"><strong>Quelyos</strong> - Message recu via le formulaire de contact</p>
                            <p style="margin: 10px 0 0 0; font-size: 12px; color: #999;">
                                Ce message a ete envoye automatiquement depuis le site web.
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
]]>
        </field>
    </record>
</odoo>
