        </record>

        <record id="menu_item_mobile_cart" model="cms.menu.item">
            <field name="name">Panier</field>
            <field name="menu_id" ref="menu_mobile"/>
            <field name="link_type">internal</field>
            <field name="internal_route">/cart</field>
            <field name="icon">fa-shopping-cart</field>
            <field name="sequence">20</field>
        </record>

        <record id="menu_item_mobile_account" model="cms.menu.item">
            <field name="name">Mon Compte</field>
            <field name="menu_id" ref="menu_mobile"/>
            <field name="link_type">internal</field>
            <field name="internal_route">/account</field>
            <field name="icon">fa-user</field>
            <field name="sequence">30</field>
        </record>

        <record id="menu_item_mobile_contact" model="cms.menu.item">
            <field name="name">Contact</field>
            <field name="menu_id" ref="menu_mobile"/>
            <field name="link_type">page</field>
            <field name="page_id" ref="page_contact"/>
            <field name="icon">fa-envelope</field>
            <field name="sequence">40</field>
        </record>

    </data>
</odoo>
