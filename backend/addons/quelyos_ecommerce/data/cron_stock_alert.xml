<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron Job: Check Product Restocks -->
        <record id="cron_check_stock_restocks" model="ir.cron">
            <field name="name">E-commerce: Check Product Restocks</field>
            <field name="model_id" ref="model_stock_alert_subscription"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_restocks()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>

        <!-- Cron Job: Cleanup Old Stock Alert Subscriptions -->
        <record id="cron_cleanup_stock_alerts" model="ir.cron">
            <field name="name">E-commerce: Cleanup Old Stock Alerts</field>
            <field name="model_id" ref="model_stock_alert_subscription"/>
            <field name="state">code</field>
            <field name="code">model._cron_cleanup_old_subscriptions()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>

    </data>
</odoo>
