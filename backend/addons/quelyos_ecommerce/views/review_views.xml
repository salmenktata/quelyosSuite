<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire review -->
        <record id="view_product_review_form" model="ir.ui.view">
            <field name="name">product.review.form</field>
            <field name="model">product.review</field>
            <field name="arch" type="xml">
                <form string="Avis Produit">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="pending,approved"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="partner_id"/>
                                <field name="rating" widget="priority"/>
                            </group>
                            <group>
                                <field name="verified_purchase" readonly="1"/>
                                <field name="helpful_count" readonly="1"/>
                            </group>
                        </group>

                        <group string="Avis">
                            <field name="title" placeholder="Titre de l'avis"/>
                            <field name="comment" placeholder="Commentaire détaillé" widget="text"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue liste review -->
        <record id="view_product_review_tree" model="ir.ui.view">
            <field name="name">product.review.list</field>
            <field name="model">product.review</field>
            <field name="arch" type="xml">
                <list string="Avis Produits">
                    <field name="product_id"/>
                    <field name="partner_id"/>
                    <field name="rating"/>
                    <field name="title"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Action reviews -->
        <record id="action_product_reviews" model="ir.actions.act_window">
            <field name="name">Avis Produits</field>
            <field name="res_model">product.review</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu reviews sous menu_ecommerce_root -->
<!--         <menuitem id="menu_product_reviews" (moved to menu.xml) -->
<!--                   name="Avis Produits" (moved to menu.xml) -->
<!--                   parent="menu_ecommerce_root" (moved to menu.xml) -->
<!--                   action="action_product_reviews" (moved to menu.xml) -->
<!--                   sequence="30"/> (moved to menu.xml) -->

    </data>
</odoo>
