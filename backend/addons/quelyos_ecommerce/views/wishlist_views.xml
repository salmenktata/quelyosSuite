<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire wishlist -->
        <record id="view_wishlist_form" model="ir.ui.view">
            <field name="name">product.wishlist.form</field>
            <field name="model">product.wishlist</field>
            <field name="arch" type="xml">
                <form string="Wishlist">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" options="{'no_create': True}"/>
                                <field name="product_id" options="{'no_create': True}"/>
                                <field name="product_tmpl_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="date_added" readonly="1"/>
                                <field name="notes" placeholder="Notes client..."/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue liste wishlist -->
        <record id="view_wishlist_tree" model="ir.ui.view">
            <field name="name">product.wishlist.list</field>
            <field name="model">product.wishlist</field>
            <field name="arch" type="xml">
                <list string="Wishlists" default_order="date_added desc">
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="product_tmpl_id" optional="hide"/>
                    <field name="date_added"/>
                    <field name="notes" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Vue recherche wishlist -->
        <record id="view_wishlist_search" model="ir.ui.view">
            <field name="name">product.wishlist.search</field>
            <field name="model">product.wishlist</field>
            <field name="arch" type="xml">
                <search string="Rechercher Wishlist">
                    <field name="partner_id" string="Client"/>
                    <field name="product_id" string="Produit"/>

                    <filter string="Avec Notes" name="with_notes"
                            domain="[('notes', '!=', False)]"/>

                    <separator/>

                    <filter string="Client" name="group_by_partner"
                            context="{'group_by': 'partner_id'}"/>
                    <filter string="Produit" name="group_by_product"
                            context="{'group_by': 'product_id'}"/>
                    <filter string="Date Ajout" name="group_by_date"
                            context="{'group_by': 'date_added:month'}"/>
                </search>
            </field>
        </record>

        <!-- Vue kanban wishlist -->
        <record id="view_wishlist_kanban" model="ir.ui.view">
            <field name="name">product.wishlist.kanban</field>
            <field name="model">product.wishlist</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="date_added"/>
                    <field name="notes"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="product_id"/>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div>
                                            <i class="fa fa-user"/> <field name="partner_id"/>
                                        </div>
                                        <div class="text-muted">
                                            <i class="fa fa-clock-o"/>
                                            <field name="date_added" widget="date"/>
                                        </div>
                                        <div t-if="record.notes.raw_value" class="text-muted mt-2">
                                            <small><field name="notes"/></small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action principale wishlist -->
        <record id="action_wishlist" model="ir.actions.act_window">
            <field name="name">Wishlists</field>
            <field name="res_model">product.wishlist</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_wishlist_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucune wishlist
                </p>
                <p>
                    Les wishlists des clients apparaîtront ici.
                    Vous pouvez voir quels produits intéressent vos clients.
                </p>
            </field>
        </record>

        <!-- Extension vue produit pour afficher wishlists -->
        <record id="view_product_template_wishlist_form" model="ir.ui.view">
            <field name="name">product.template.form.wishlist</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Wishlists" name="wishlists">
                        <field name="wishlist_ids">
                            <list>
                                <field name="partner_id"/>
                                <field name="date_added"/>
                                <field name="notes"/>
                            </list>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>

        <!-- Extension vue client pour afficher wishlist -->
        <record id="view_partner_wishlist_form" model="ir.ui.view">
            <field name="name">res.partner.form.wishlist</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']" position="after">
                    <page string="Wishlist" name="wishlist">
                        <field name="wishlist_ids">
                            <list>
                                <field name="product_id"/>
                                <field name="date_added"/>
                                <field name="notes"/>
                            </list>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Menu wishlist moved to menu.xml to fix load order -->

    </data>
</odoo>
