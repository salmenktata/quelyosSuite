<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire Configuration E-commerce -->
    <record id="view_ecommerce_config_form" model="ir.ui.view">
        <field name="name">ecommerce.config.form</field>
        <field name="model">ecommerce.config</field>
        <field name="arch" type="xml">
            <form string="Configuration E-commerce">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de la configuration"/>
                        </h1>
                    </div>
                    <group>
                        <div class="alert alert-info" role="alert">
                            <strong>Note:</strong> Les paramètres frontend techniques (URLs, webhooks, feature flags) sont dans
                            <a href="/web#model=quelyos.frontend.config&amp;view_type=form" target="_blank">Configuration Frontend</a>
                        </div>
                    </group>
                    <notebook>
                        <page string="Marque" name="brand">
                            <group>
                                <group string="Informations de la marque">
                                    <field name="brand_name"/>
                                    <field name="brand_slogan"/>
                                    <field name="brand_description"/>
                                </group>
                                <group string="Contact">
                                    <field name="brand_email"/>
                                    <field name="brand_phone"/>
                                    <field name="brand_whatsapp"/>
                                    <field name="contact_form_recipients"
                                           widget="char"
                                           placeholder="contact@quelyos.com, support@quelyos.com"/>
                                </group>
                            </group>
                        </page>
                        <page string="Réseaux sociaux" name="social">
                            <group>
                                <group string="Liens réseaux sociaux">
                                    <field name="social_facebook" placeholder="https://facebook.com/..."/>
                                    <field name="social_instagram" placeholder="https://instagram.com/..."/>
                                    <field name="social_twitter" placeholder="https://twitter.com/..."/>
                                </group>
                                <group>
                                    <field name="social_youtube" placeholder="https://youtube.com/..."/>
                                    <field name="social_linkedin" placeholder="https://linkedin.com/..."/>
                                    <field name="social_tiktok" placeholder="https://tiktok.com/..."/>
                                </group>
                            </group>
                        </page>
                        <page string="Livraison" name="shipping">
                            <group>
                                <group string="Livraison standard">
                                    <field name="free_shipping_threshold"/>
                                    <field name="shipping_days_min"/>
                                    <field name="shipping_days_max"/>
                                </group>
                                <group string="Livraison express">
                                    <field name="express_shipping_days_min"/>
                                    <field name="express_shipping_days_max"/>
                                </group>
                            </group>
                        </page>
                        <page string="Retours et garantie" name="returns">
                            <group>
                                <group string="Politique de retour">
                                    <field name="return_window_days"/>
                                    <field name="refund_days_min"/>
                                    <field name="refund_days_max"/>
                                </group>
                                <group string="Garantie">
                                    <field name="warranty_years"/>
                                </group>
                            </group>
                        </page>
                        <page string="Service client" name="customer_service">
                            <group>
                                <group string="Horaires du service client">
                                    <field name="cs_hours_start"/>
                                    <field name="cs_hours_end"/>
                                    <field name="cs_days"/>
                                </group>
                            </group>
                        </page>
                        <page string="Devise et fidélité" name="currency_loyalty">
                            <group>
                                <group string="Devise par défaut">
                                    <field name="default_currency_code"/>
                                    <field name="default_currency_symbol"/>
                                </group>
                                <group string="Programme de fidélité">
                                    <field name="loyalty_points_ratio"/>
                                    <field name="default_discount_percent"/>
                                </group>
                            </group>
                        </page>
                        <page string="SEO" name="seo">
                            <group>
                                <group string="Configuration SEO">
                                    <field name="site_url"/>
                                    <field name="site_title"/>
                                    <field name="site_description"/>
                                </group>
                                <group string="Options">
                                    <field name="enable_auto_slug"/>
                                    <field name="default_meta_description"/>
                                </group>
                            </group>
                        </page>
                        <page string="Catalogue" name="catalogue">
                            <group>
                                <group string="Affichage Produits">
                                    <field name="show_out_of_stock"/>
                                </group>
                            </group>
                        </page>
                        <page string="Panier" name="cart">
                            <group>
                                <group string="Configuration panier">
                                    <field name="cart_session_duration"/>
                                    <field name="min_order_amount"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue liste Configuration E-commerce -->
    <record id="view_ecommerce_config_tree" model="ir.ui.view">
        <field name="name">ecommerce.config.list</field>
        <field name="model">ecommerce.config</field>
        <field name="arch" type="xml">
            <list string="Configurations E-commerce">
                <field name="name"/>
                <field name="show_out_of_stock"/>
                <field name="cart_session_duration"/>
                <field name="min_order_amount"/>
            </list>
        </field>
    </record>

    <!-- Action Configuration E-commerce -->
    <record id="action_ecommerce_config" model="ir.actions.act_window">
        <field name="name">Configuration E-commerce</field>
        <field name="res_model">ecommerce.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configurer votre module e-commerce
            </p>
            <p>
                Définissez les paramètres métier de votre boutique en ligne.
            </p>
        </field>
    </record>

    <!-- REMARQUE: Les menus sont définis dans menu.xml -->

    <!-- Vue formulaire Wishlist -->
    <record id="view_product_wishlist_form" model="ir.ui.view">
        <field name="name">product.wishlist.form</field>
        <field name="model">product.wishlist</field>
        <field name="arch" type="xml">
            <form string="Wishlist">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="product_id"/>
                        <field name="date_added"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue liste Wishlist -->
    <record id="view_product_wishlist_tree" model="ir.ui.view">
        <field name="name">product.wishlist.list</field>
        <field name="model">product.wishlist</field>
        <field name="arch" type="xml">
            <list string="Wishlists">
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="date_added"/>
            </list>
        </field>
    </record>

    <!-- Action Wishlist -->
    <record id="action_product_wishlist" model="ir.actions.act_window">
        <field name="name">Wishlists</field>
        <field name="res_model">product.wishlist</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- REMARQUE: Le menu wishlist est défini dans wishlist_views.xml -->
</odoo>
