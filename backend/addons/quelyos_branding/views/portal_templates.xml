<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--
            Override des templates du portail client
            Pour personnaliser l'expérience des clients
        -->

        <!-- ========================================
             PORTAL LAYOUT
             Layout principal du portail
        ========================================= -->
        <template id="quelyos_branding.portal_layout" name="Quelyos Portal Layout" inherit_id="portal.portal_layout" priority="99">
            <!-- Logo dans le header du portail -->
            <xpath expr="//a[hasclass('navbar-brand')]//img" position="replace">
                <img src="/quelyos_branding/static/src/img/logo/quelyos_logo.png"
                     alt="Quelyos"
                     style="max-height: 48px;"/>
            </xpath>

            <!-- Footer du portail -->
            <xpath expr="//div[hasclass('o_footer_copyright')]" position="replace">
                <div class="quelyos_footer_copyright text-center text-muted">
                    <small>© 2026 Quelyos - Tous droits réservés</small>
                </div>
            </xpath>
        </template>

        <!-- ========================================
             PORTAL MY HOME
             Page d'accueil du portail
        ========================================= -->
        <template id="quelyos_branding.portal_my_home" name="Quelyos Portal My Home" inherit_id="portal.portal_my_home" priority="99">
            <!-- Personnalisation du titre de bienvenue -->
            <xpath expr="//h3" position="replace">
                <h3 class="page-header">
                    <t t-if="sales_user">Bienvenue sur votre portail Quelyos</t>
                    <t t-else="">Votre portail Quelyos</t>
                </h3>
            </xpath>
        </template>

    </data>
</odoo>
