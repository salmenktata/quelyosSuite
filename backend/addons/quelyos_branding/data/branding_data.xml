<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Configuration des paramètres de branding Quelyos -->

        <!-- Nom de l'entreprise -->
        <record id="config_company_name" model="ir.config_parameter">
            <field name="key">quelyos.branding.company_name</field>
            <field name="value">Quelyos</field>
        </record>

        <!-- URL du site web -->
        <record id="config_company_url" model="ir.config_parameter">
            <field name="key">quelyos.branding.company_url</field>
            <field name="value">https://quelyos.com</field>
        </record>

        <!-- URL du support -->
        <record id="config_support_url" model="ir.config_parameter">
            <field name="key">quelyos.branding.support_url</field>
            <field name="value">https://support.quelyos.com</field>
        </record>

        <!-- URL de la documentation -->
        <record id="config_docs_url" model="ir.config_parameter">
            <field name="key">quelyos.branding.docs_url</field>
            <field name="value">https://docs.quelyos.com</field>
        </record>

        <!-- Couleur primaire -->
        <record id="config_primary_color" model="ir.config_parameter">
            <field name="key">quelyos.branding.primary_color</field>
            <field name="value">#1e40af</field>
        </record>

        <!-- Couleur secondaire -->
        <record id="config_secondary_color" model="ir.config_parameter">
            <field name="key">quelyos.branding.secondary_color</field>
            <field name="value">#10b981</field>
        </record>

        <!-- Slogan -->
        <record id="config_slogan" model="ir.config_parameter">
            <field name="key">quelyos.branding.slogan</field>
            <field name="value">La plateforme SaaS omnicanal pour le retail</field>
        </record>

        <!-- Email de contact -->
        <record id="config_contact_email" model="ir.config_parameter">
            <field name="key">quelyos.branding.contact_email</field>
            <field name="value">contact@quelyos.com</field>
        </record>

        <!-- Afficher le logo dans les emails -->
        <record id="config_show_logo_email" model="ir.config_parameter">
            <field name="key">quelyos.branding.show_logo_email</field>
            <field name="value">True</field>
        </record>

        <!-- Texte du footer des emails -->
        <record id="config_email_footer_text" model="ir.config_parameter">
            <field name="key">quelyos.branding.email_footer_text</field>
            <field name="value">Envoyé par Quelyos - La plateforme retail omnicanal</field>
        </record>

        <!-- Texte "Powered by" -->
        <record id="config_powered_by_text" model="ir.config_parameter">
            <field name="key">quelyos.branding.powered_by_text</field>
            <field name="value">Powered by Quelyos</field>
        </record>

        <!-- Année du copyright -->
        <record id="config_copyright_year" model="ir.config_parameter">
            <field name="key">quelyos.branding.copyright_year</field>
            <field name="value">2026</field>
        </record>

        <!-- Texte du copyright -->
        <record id="config_copyright_text" model="ir.config_parameter">
            <field name="key">quelyos.branding.copyright_text</field>
            <field name="value">© 2026 Quelyos - Tous droits réservés</field>
        </record>

        <!-- Activer le debranding complet -->
        <record id="config_enable_full_debranding" model="ir.config_parameter">
            <field name="key">quelyos.branding.enable_full_debranding</field>
            <field name="value">True</field>
        </record>

        <!-- Remplacer les textes "Odoo" par "Quelyos" -->
        <record id="config_replace_odoo_text" model="ir.config_parameter">
            <field name="key">quelyos.branding.replace_odoo_text</field>
            <field name="value">True</field>
        </record>

        <!-- Favicon path -->
        <record id="config_favicon_path" model="ir.config_parameter">
            <field name="key">quelyos.branding.favicon_path</field>
            <field name="value">/quelyos_branding/static/src/img/favicon/favicon.ico</field>
        </record>

        <!-- Logo path (navbar) -->
        <record id="config_logo_navbar_path" model="ir.config_parameter">
            <field name="key">quelyos.branding.logo_navbar_path</field>
            <field name="value">/quelyos_branding/static/src/img/logo/quelyos_logo_white.png</field>
        </record>

        <!-- Logo path (emails) -->
        <record id="config_logo_email_path" model="ir.config_parameter">
            <field name="key">quelyos.branding.logo_email_path</field>
            <field name="value">/quelyos_branding/static/src/img/logo/quelyos_logo.png</field>
        </record>

        <!-- Logo path (login page) -->
        <record id="config_logo_login_path" model="ir.config_parameter">
            <field name="key">quelyos.branding.logo_login_path</field>
            <field name="value">/quelyos_branding/static/src/img/logo/quelyos_logo_white.png</field>
        </record>

        <!-- Background login path -->
        <record id="config_login_bg_path" model="ir.config_parameter">
            <field name="key">quelyos.branding.login_bg_path</field>
            <field name="value">/quelyos_branding/static/src/img/backgrounds/login_bg.jpg</field>
        </record>

    </data>
</odoo>
