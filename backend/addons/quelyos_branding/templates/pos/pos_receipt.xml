<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--
            Override des templates de tickets de caisse POS
        -->

        <!-- ========================================
             POS RECEIPT (Ticket de caisse)
        ========================================= -->
        <template id="point_of_sale.OrderReceipt" name="Quelyos POS Receipt" inherit_id="point_of_sale.OrderReceipt" priority="99">
            <!-- Header du ticket avec logo Quelyos -->
            <xpath expr="//div[hasclass('pos-receipt-logo')]" position="replace">
                <div class="quelyos_receipt_header text-center">
                    <img src="/quelyos_branding/static/src/img/logo/quelyos_logo_small.png"
                         alt="Quelyos"
                         style="max-width: 150px; height: auto; margin-bottom: 0.5rem;"/>
                    <h2 style="font-size: 1.125rem; font-weight: bold; margin: 0.5rem 0;">
                        <t t-esc="receipt.company.name"/>
                    </h2>
                    <div class="company-info" style="font-size: 0.75rem; color: #4b5563;">
                        <div t-if="receipt.company.street"><t t-esc="receipt.company.street"/></div>
                        <div>
                            <span t-if="receipt.company.zip"><t t-esc="receipt.company.zip"/></span>
                            <span t-if="receipt.company.city"><t t-esc="receipt.company.city"/></span>
                        </div>
                        <div t-if="receipt.company.phone">Tél: <t t-esc="receipt.company.phone"/></div>
                        <div t-if="receipt.company.email">Email: <t t-esc="receipt.company.email"/></div>
                    </div>
                </div>
            </xpath>

            <!-- Footer du ticket -->
            <xpath expr="//div[hasclass('pos-receipt-footer')]" position="inside">
                <div class="text-center" style="margin-top: 1rem; padding-top: 0.5rem; border-top: 1px dashed #9ca3af; font-size: 0.625rem;">
                    <p style="margin: 0.25rem 0;">Merci de votre visite !</p>
                    <p class="powered-by" style="margin: 0.25rem 0; font-weight: 600;">
                        Propulsé par Quelyos
                    </p>
                </div>
            </xpath>
        </template>

    </data>
</odoo>
