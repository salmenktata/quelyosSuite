<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--
            Override du layout principal du site web
        -->

        <!-- ========================================
             WEBSITE LAYOUT
        ========================================= -->
        <template id="website.layout" name="Quelyos Website Layout" inherit_id="website.layout" priority="99">
            <!-- Favicon -->
            <xpath expr="//link[@rel='shortcut icon']" position="replace">
                <link rel="shortcut icon" href="/quelyos_branding/static/src/img/favicon/favicon.ico" type="image/x-icon"/>
            </xpath>

            <!-- Meta tags -->
            <xpath expr="//head" position="inside">
                <link rel="icon" type="image/png" sizes="32x32" href="/quelyos_branding/static/src/img/favicon/favicon-32x32.png"/>
                <link rel="icon" type="image/png" sizes="16x16" href="/quelyos_branding/static/src/img/favicon/favicon-16x16.png"/>
                <link rel="apple-touch-icon" href="/quelyos_branding/static/src/img/favicon/apple-touch-icon.png"/>
                <meta name="application-name" content="Quelyos"/>
                <meta name="apple-mobile-web-app-title" content="Quelyos"/>
                <meta name="theme-color" content="#1e40af"/>
            </xpath>
        </template>

    </data>
</odoo>
