<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--
            Override du header du site web
        -->

        <!-- ========================================
             WEBSITE HEADER
        ========================================= -->
        <template id="website.header" name="Quelyos Website Header" inherit_id="website.header" priority="99">
            <!-- Remplacer le logo -->
            <xpath expr="//a[hasclass('navbar-brand')]//img" position="replace">
                <img src="/quelyos_branding/static/src/img/logo/quelyos_logo.png"
                     alt="Quelyos"
                     class="quelyos_website_logo"
                     style="max-height: 48px;"/>
            </xpath>
        </template>

    </data>
</odoo>
