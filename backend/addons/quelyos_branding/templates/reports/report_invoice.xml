<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Override Invoice Report -->
        <template id="report_invoice_document" inherit_id="account.report_invoice_document" priority="99">

            <!-- Add Quelyos branding to invoice title -->
            <xpath expr="//h2" position="attributes">
                <attribute name="style">color: #1e40af;</attribute>
            </xpath>

            <!-- Style invoice number with Quelyos color -->
            <xpath expr="//span[@t-field='o.name']" position="attributes">
                <attribute name="style">color: #1e40af; font-weight: bold;</attribute>
            </xpath>

            <!-- Style table headers -->
            <xpath expr="//table[@name='invoice_line_table']//thead" position="attributes">
                <attribute name="style">background-color: #1e40af; color: white;</attribute>
            </xpath>

            <!-- Style totals section -->
            <xpath expr="//div[@id='total']//tr[@class='border-black o_total']//strong" position="attributes">
                <attribute name="style">color: #1e40af;</attribute>
            </xpath>

        </template>

    </data>
</odoo>
