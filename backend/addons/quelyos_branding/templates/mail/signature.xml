<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--
            Signature email personnalisée Quelyos
        -->

        <!-- ========================================
             EMAIL SIGNATURE
        ========================================= -->
        <template id="quelyos_email_signature" name="Quelyos Email Signature">
            <table border="0" cellpadding="0" cellspacing="0" style="font-family: Arial, sans-serif; font-size: 13px; color: #333;">
                <tr>
                    <td style="padding-right: 15px; vertical-align: top;">
                        <img src="/quelyos_branding/static/src/img/logo/quelyos_logo_small.png"
                             alt="Quelyos"
                             style="width: 80px; height: auto;"/>
                    </td>
                    <td style="border-left: 2px solid #1e40af; padding-left: 15px; vertical-align: top;">
                        <p style="margin: 0; font-weight: bold; color: #1e40af; font-size: 14px;">
                            Équipe Quelyos
                        </p>
                        <p style="margin: 5px 0 0 0; font-size: 12px; color: #6b7280;">
                            La plateforme SaaS omnicanal pour le retail
                        </p>
                        <p style="margin: 8px 0 0 0; font-size: 12px;">
                            <a href="https://quelyos.com" target="_blank" style="color: #1e40af; text-decoration: none;">
                                www.quelyos.com
                            </a>
                            <span style="color: #9ca3af; margin: 0 5px;">|</span>
                            <a href="mailto:contact@quelyos.com" style="color: #1e40af; text-decoration: none;">
                                contact@quelyos.com
                            </a>
                        </p>
                    </td>
                </tr>
            </table>
        </template>

    </data>
</odoo>
