<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job : Détection paniers abandonnés et envoi emails de relance -->
        <record id="ir_cron_abandoned_cart_recovery" model="ir.cron">
            <field name="name">Quelyos: Récupération paniers abandonnés</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model._cron_abandoned_cart_recovery()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>
