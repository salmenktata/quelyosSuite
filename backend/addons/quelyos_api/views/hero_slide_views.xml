<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Tree (Liste) -->
    <record id="view_hero_slide_tree" model="ir.ui.view">
        <field name="name">quelyos.hero.slide.tree</field>
        <field name="model">quelyos.hero.slide</field>
        <field name="arch" type="xml">
            <list string="Hero Slides">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="title"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>

    <!-- Vue Form (Formulaire) -->
    <record id="view_hero_slide_form" model="ir.ui.view">
        <field name="name">quelyos.hero.slide.form</field>
        <field name="model">quelyos.hero.slide</field>
        <field name="arch" type="xml">
            <form string="Hero Slide">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group string="Contenu">
                        <group>
                            <field name="title"/>
                            <field name="subtitle"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="image" widget="image"/>
                        </group>
                    </group>
                    <group string="Call-to-Actions">
                        <group>
                            <field name="cta_text"/>
                            <field name="cta_link"/>
                        </group>
                        <group>
                            <field name="cta_secondary_text"/>
                            <field name="cta_secondary_link"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hero_slide" model="ir.actions.act_window">
        <field name="name">Hero Slides</field>
        <field name="res_model">quelyos.hero.slide</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un nouveau slide pour la homepage
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hero_slide"
              name="Hero Slides"
              parent="website.menu_website_configuration"
              action="action_hero_slide"
              sequence="50"/>
</odoo>
