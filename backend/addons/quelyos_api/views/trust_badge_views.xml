<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_trust_badge_tree" model="ir.ui.view">
        <field name="name">quelyos.trust.badge.tree</field>
        <field name="model">quelyos.trust.badge</field>
        <field name="arch" type="xml">
            <list string="Trust Badges">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="title"/>
                <field name="icon"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_trust_badge_form" model="ir.ui.view">
        <field name="name">quelyos.trust.badge.form</field>
        <field name="model">quelyos.trust.badge</field>
        <field name="arch" type="xml">
            <form string="Trust Badge">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Contenu">
                        <field name="title"/>
                        <field name="subtitle"/>
                        <field name="icon"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_trust_badge" model="ir.actions.act_window">
        <field name="name">Trust Badges</field>
        <field name="res_model">quelyos.trust.badge</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_trust_badge"
              name="Trust Badges"
              parent="menu_quelyos_cms"
              action="action_trust_badge"
              sequence="40"/>
</odoo>
